{% extends 'base.html.twig' %}
{% block title %}Profil de {{ utilisateur.username }}{% endblock %}
{% block body %}
<div class="profil-public-container" style="max-width: 800px; margin: 40px auto; padding: 20px;">
    <div class="profil-header" style="display: flex; align-items: center; gap: 30px; margin-bottom: 40px; padding-bottom: 30px; border-bottom: 2px solid #e0e0e0;">
        <div class="user-thmb-container" style="width: 150px; height: 150px; border-radius: 50%; overflow: hidden; flex-shrink: 0;">
            {% if user and user.miniature %}
                <img src="{{ asset(user.miniature) }}" alt="{{ utilisateur.username }}" style="width: 100%; height: 100%; object-fit: cover;">
            {% else %}
                <img src="{{ asset('/assets/img/thmb-user.png') }}" alt="{{ utilisateur.username }}" style="width: 100%; height: 100%; object-fit: cover;">
            {% endif %}
        </div>
        <div class="user-info">
            <h1 style="margin: 0 0 10px 0; color: #333;">{{ utilisateur.username }}</h1>
            {% if user.nom or user.prenom %}
                <p style="margin: 5px 0; color: #666; font-size: 18px;">
                    {% if user.prenom %}{{ user.prenom }}{% endif %}
                    {% if user.nom %} {{ user.nom }}{% endif %}
                </p>
            {% endif %}
            {% if user.ville or user.region %}
                <p style="margin: 5px 0; color: #888;">
                    {% if user.ville %}{{ user.ville }}{% endif %}
                    {% if user.ville and user.region %}, {% endif %}
                    {% if user.region %}{{ user.region }}{% endif %}
                </p>
            {% endif %}
        </div>
    </div>
    
    <div class="profil-details" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 30px;">
        <div class="detail-block">
            <h3 style="margin: 0 0 15px 0; color: #555; font-size: 16px; font-weight: 600;">Informations personnelles</h3>
            <div style="display: flex; flex-direction: column; gap: 10px;">
                {% if user.nom %}
                    <div>
                        <span style="font-weight: 600; color: #666;">Nom :</span>
                        <span style="color: #333;">{{ user.nom }}</span>
                    </div>
                {% endif %}
                {% if user.prenom %}
                    <div>
                        <span style="font-weight: 600; color: #666;">Prénom :</span>
                        <span style="color: #333;">{{ user.prenom }}</span>
                    </div>
                {% endif %}
                <div>
                    <span style="font-weight: 600; color: #666;">Pseudonyme :</span>
                    <span style="color: #333;">{{ utilisateur.username }}</span>
                </div>
            </div>
        </div>
        
        <div class="detail-block">
            <h3 style="margin: 0 0 15px 0; color: #555; font-size: 16px; font-weight: 600;">Localisation</h3>
            <div style="display: flex; flex-direction: column; gap: 10px;">
                {% if user.ville %}
                    <div>
                        <span style="font-weight: 600; color: #666;">Ville :</span>
                        <span style="color: #333;">{{ user.ville }}</span>
                    </div>
                {% endif %}
                {% if user.region %}
                    <div>
                        <span style="font-weight: 600; color: #666;">Région :</span>
                        <span style="color: #333;">{{ user.region }}</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div style="margin-top: 40px; text-align: center;">
        <a href="{{ path('app_liste_annonces') }}" style="display: inline-block; padding: 10px 20px; background-color: #6b8e23; color: white; text-decoration: none; border-radius: 5px;">Retour aux itinéraires</a>
    </div>
</div>
{% endblock %}

