{% block header %}
<header>
    <div class="header-wrapper">
        <div class="site-branding">
            <a href="{{ path('app_home') }}"><img src="{{ asset('assets/img/logo.png')}}">
        </div>
        <nav class="menu-header">
            <ul class="list-inline">
                <li class="menu-item"><a href="{{ path('app_liste_annonces') }}"> Chercher une balade</a></li>
                <li class="menu-item">À propos</li>
                <li class="menu-item">Fonctionnalités</li>
            </ul>
        </nav>
        <nav class="log-wrapper">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a class="vertical account-icon-wrapper" href="{{ path('app_backoffice') }}">
                <img src="{{ asset('assets/img/icons/icon-account.svg')}}" alt="Mon compte">
                {% set unread_count = count_unread_messages() %}
                {# Debug temporaire - à retirer après test #}
                {# <span style="color: red; font-size: 10px;">Debug: {{ unread_count }}</span> #}
                {% if unread_count > 0 %}
                    <span class="notification-badge">{{ unread_count > 99 ? '99+' : unread_count }}</span>
                {% endif %}
            </a>
            <a href="{{ path('app_logout') }}" class="logout-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-log-out-icon lucide-log-out">
                    <path d="m16 17 5-5-5-5"/>
                    <path d="M21 12H9"/>
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                </svg>
            </a>
        {% else %}
            <a href="{{ path('app_register') }}" class="register">S'inscrire</a>
        <a href="{{ path('app_login') }}" class="connect">
            <button class="btn-green">Connexion</button>
        </a>
        {% endif %}      
        <nav class="menu-mobile">
        <div class="cross-icon">
            <span class="cross-icon-line"></span>
            <span class="cross-icon-line"></span>
            <span class="cross-icon-line"></span>
        </div>
            <ul class="list-inline">
                <li class="menu-item"><a href="{{ path('app_liste_annonces') }}"> Chercher une balade</a></li>
                <li class="menu-item">À propos</li>
                <li class="menu-item">Fonctionnalités</li>
            </ul>
        </nav>      
        </nav>
    </div>
</header>
{% endblock %}