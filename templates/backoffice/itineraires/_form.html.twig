    </div>
    <div class="block-input">
        {{ form_label(form.duree, 'Durée', {'label_attr': {'class': 'semibold'}}) }}
        {{  form_widget(form.duree, {'attr': {'class': 'inline gap-15'}}) }}
    </div>
   <div class="block-input">
        <p class="semibold">Journée</p>
        <label class="switch">
            <input type="checkbox">
            <span class="slider round"></span>
        </label>
    </div>
    <div class="block-input">
        <p class="semibold">Allures</p>
        <div class="inline gap-15">
        {{ form_row(form.allures,{'attr': {'class': 'inline gap-15'}}) }}
        </div>
    </div>
     <div class="radio-container">
        <p class="semibold">Niveau</p>
        <div class="inline gap-15">
            {{ form_row(form.niveau, {'attr':{'class':'inline'}}) }}
