    <div class="block-input">
        <p class="semibold">Titre</p>
        {{  form_row(form.titre, {'attr': {'class': 'inline gap-15 w-100'}}) }}
    </div>
    
    <div class="block-input">
        <label class="semibold">Lieu de départ</label>
        {{ form_widget(form.depart, {'attr': {'class': 'vertical w-100', 'id': 'ville-input', 'autocomplete': 'off'}}) }}
    </div>
    <div class="block-input">
        <label class="semibold">Code postal</label>
